<?xml-stylesheet href="xsltforms/xsltforms.xsl" type="text/xsl"?>
<html
   xmlns="http://www.w3.org/1999/xhtml"
   xmlns:ev="http://www.w3.org/2001/xml-events"
   xmlns:xf="http://www.w3.org/2002/xforms">
   <head>
      <title>Login</title>
   <style type="text/css">
   @namespace xf url("http://www.w3.org/2002/xforms");
 
  .xforms-group {
     display: table;
   }
 
   .xforms-input, .xforms-secret, .xforms-output {
      display: table-row;
   }
 
   .xforms-value {
      text-align: left;
   }
 
   .xforms-input .xforms-label, .xforms-secret .xforms-label {
      display: table-cell;
      font-family: Arial, Helvetica, sans-serif;
      font-weight: bold;
      text-align: right;
      width: 110px;
   }
   
   legend {
      font-family: Arial, Helvetica, sans-serif;
      font-weight: bold;
      text-align: left;
   }
   .xforms-output {
     color:red;
   }
 
</style>
      <xf:model>
         <xf:instance>
            <account xmlns="">
               <user/>
               <password/>
               <result/>
            </account>
         </xf:instance>
          <xf:submission id="login" name="loginForm" action="/login" method="post" replace="instance"
validate="true"/>
		  <xf:bind ref="/login/user" required="true" />
      </xf:model>
   </head>
   <body>
      <fieldset>
         <legend>Iniciar sesión</legend>
         <xf:input ref="user" >
               <xf:label>Usuario: </xf:label>
         </xf:input>
         <br/>
         <xf:secret ref="password">
            <xf:label>Constraseña: </xf:label>
         </xf:secret>
         <xf:submit submission="login">
            <xf:label>Ingresar</xf:label>
         </xf:submit>
         <br/>
         <xf:output ref="result"/>
      </fieldset>
   </body>
</html>
